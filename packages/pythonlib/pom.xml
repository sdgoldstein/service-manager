<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>sphyrna</groupId>
        <artifactId>service-manager</artifactId>
        <version>0.3.3-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <artifactId>service-manager-python</artifactId>

    <name>Service Manager Python</name>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.1.1</version>
                <executions>
                    <execution>
                        <id>clean</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>rm</executable>
                            <arguments>
                                <argument>-rf</argument>
                                <argument>dist</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-dependencies</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>poetry</executable>
                            <arguments>
                                <argument>install</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>build-with-poetry</id>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>poetry</executable>
                            <arguments>
                                <argument>build</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>pytest</id>
                        <phase>test</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>poetry</executable>
                            <arguments>
                                <argument>run</argument>
                                <argument>coverage</argument>
                                <argument>run</argument>
                                <argument>-m</argument>
                                <argument>pytest</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>coverge_report</id>
                        <phase>test</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>poetry</executable>
                            <arguments>
                                <argument>run</argument>
                                <argument>coverage</argument>
                                <argument>report</argument>
                                <argument>-m</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <!-- FIXME - add back when mypy supports pyton 3.12 better
                        <execution>
                        <id>lint-with-mypy</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>mypy</executable>
                            <arguments>
                                <argument>src/main/python/sphyrna/service_manager</argument>
                            </arguments>
                        </configuration>
                    </execution> -->
                    <execution>
                        <id>lint-with-pylint</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>pylint</executable>
                            <arguments>
                                <argument>src/main/python/sphyrna/service_manager</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>sync_version_with_poetry</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>poetry</executable>
                            <arguments>
                                <argument>version</argument>
                                <argument>${project.version}</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>git_add_toml</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>git</executable>
                            <arguments>
                                <argument>add</argument>
                                <argument>pyproject.toml</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>deploy_with_poetry</id>
                        <phase>deploy</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>poetry</executable>
                            <arguments>
                                <argument>publish</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>3.1.1</version>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>